    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "name": "Ada: Debug main - two_sum.adb",
            "request": "launch",
            "targetArchitecture": "x64",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/two_sum",
            "stopAtEntry": false,
            "externalConsole": false,
            "args": [],
            "MIMode": "gdb",
            "preLaunchTask": "ada: Build main - two_sum.adb",
            "setupCommands": [
                {
                    "description": "Catch all Ada exceptions",
                    "text": "catch exception",
                    "ignoreFailures": true
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        },
